section.contact {

	.box-title {
		margin-bottom 0
	}

	form {
		display none
		padding 40px 0

		.input {
			padding  10px

			input, textarea {
				display block
				width 100%
				max-width 100%
				outline 0
				border 0
				border 1px solid #e3e3e3
				border-radius 3px
				color #727272
				font inherit
				// border-left 3px solid main-color
				padding 15px 20px
				transition border-width .1s

				&:focus {
					border-color darken(#e3e3e3, 10%)
					border-left 3px solid main-color
				}
			}
		}

		input[type="submit"] {
			color #fff
			padding 17px 30px
			border none

			&:focus {
				background-color darken(main-color, 20%)
			}
		}
	}
}

footer {
	text-align center

	p {
		margin-bottom 20px
		color #919191
		cursor default

		a.logo {
			display inline-block
		}
	}
}


nav.social {
	color #091217
	text-align right

	a {
		def-a()

		display inline-block
		border-radius 50%
		background-color #fff
		width wh = 28px
		height wh
		text-align center
		line-height wh
		font-size 15px
		margin 0 3px
		transition  color .3s,
								background-color .3s

		&:hover {
			color #fff
			background-color main-color
		}
	}
}

a.link {
	def-a()

	color main-color

	&:hover {
		text-decoration underline
	}
}

.main-btn {
	def-a()

	border none
	outline none

	color #fff
	background-color main-color
	text-transform uppercase
	transition background-color .2s

	font inherit
	font-family 'Raleway', sans-serif
	font-weight bold

	&:hover {
		background-color darken(main-color, 10%)
	}
	&:active {
		background-color darken(main-color, 20%)
	}
}

.btn {
	def-a()

	font-family 'Raleway', sans-serif
	font-weight bold
	color inherit
	text-transform uppercase
	display inline-block
	text-align center
	border 1px solid #727272
	color #727272
	text-decoration none
	border-radius 4px
	padding 10px 15px

	transition 	color .2s,
							border-color .2s,
							background-color .2s
}

